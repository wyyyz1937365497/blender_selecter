{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Maui App (Windows)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/blender_selecter.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole"
    },
    {
      "name": "Launch Maui App with Image (Windows)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net9.0-windows10.0.19041.0/win10-x64/blender_selecter.exe",
      "args": ["${input:imagePath}"],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "console": "internalConsole"
    }
  ],
  "inputs": [
    {
      "id": "imagePath",
      "type": "promptString",
      "description": "Enter the path to the image file",
      "default": "${workspaceFolder}/Resources/Images/dotnet_bot.png"
    }
  ]
}